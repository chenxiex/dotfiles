### Vi mode indicator
_VI_SYM=">"

function zle-line-init zle-keymap-select {
    case $KEYMAP in
        vicmd)  _VI_SYM="<" ;;
        viins|main) _VI_SYM=">" ;;
    esac
    zle reset-prompt
}

zle -N zle-line-init
zle -N zle-keymap-select
### End of Vi mode indicator

_PROMPT_USERHOST=
_PROMPT_COLOR="green"
function _update_prompt_env() {
    local ret=$?

    if [[ -n $SSH_CONNECTION ]] \
       || [[ -f /run/.containerenv ]] \
       || grep -qE '(docker|kubepods|containerd)' /proc/1/cgroup 2>/dev/null
    then
        _PROMPT_USERHOST="%n@%m " 
    else
        _PROMPT_USERHOST= 
    fi

	if (( EUID == 0 )); then
		if (( ret == 0 )); then
			_PROMPT_COLOR="cyan"
		else
			_PROMPT_COLOR="magenta"
		fi
	else
		if (( ret == 0 )); then
			_PROMPT_COLOR="green"
		else
			_PROMPT_COLOR="red"
		fi
	fi
}

add-zsh-hook precmd _update_prompt_env

setopt PROMPT_SUBST

PROMPT='
[${_PROMPT_USERHOST}%F{blue}%~%f]
%F{${_PROMPT_COLOR}}${_VI_SYM}%f '
### End of prompt

